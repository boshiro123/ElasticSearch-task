<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="Load data to Product" author="DBA presents">
        <loadData tableName="product" file="db/data/product.csv">
            <column name="id" header="id" />
            <column name="name" header="name" />
            <column name="price" header="price" />
            <column name="date" header="date" />
            <column name="description" header="text" />
        </loadData>
    </changeSet>

    <changeSet id="Load data to SKU" author="DBA presents">
        <loadData tableName="sku" file="db/data/sku.csv">
            <column name="id" header="id" />
            <column name="product_id" header="product_id" />
            <column name="code" header="code" />
            <column name="color" header="color" />
            <column name="access" header="access" />
        </loadData>
    </changeSet>


</databaseChangeLog>
